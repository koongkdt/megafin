---
import { SITE } from 'astrowind:config';
import Image from './common/Image.astro';
---

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white flex items-center gap-3"
>
  <Image
    class="mx-auto w-full"
    loading="eager"
    width={30}
    height={68}
    src={'~/assets/images/logo.svg'}
    alt={SITE?.name}
  />
  {SITE?.name}
</span>
